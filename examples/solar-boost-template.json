{
    "name": "solar_watts_boost_processor",
    "pipeline": [
        {
            "$source": {
                "connectionName": "sample_stream_solar",
                "timeField": { "$dateFromString": { "dateString": "$timestamp" }}
            }
        },
        {
            "$addFields": {
                "boosted_watts": {
                    "$function": {
                        "body": "$$FUNCTION",
                        "args": ["$obs.watts"],
                        "lang": "js"
                    }
                }
            }
        },
        {
            "$merge": {
                "into": {
                    "connectionName": "Cluster01",
                    "db": "test",
                    "coll": "function_test"
                }
            }
        }
    ]
}